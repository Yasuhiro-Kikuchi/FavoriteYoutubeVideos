<h1>Videogenres#add</h1>
<p>ジャンル・データの作成</p>
<% if @videogenre.errors.any? %>
<ul>
    <% @videogenre.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<% end %>
<table>
    <%= form_for(@videogenre, url:{controller:"videogenres", action:"add"}) do |form| %>
    <tr><th>name</th>
        <td><%= form.text_field :name %></td></tr>
    <tr><th>memo</th>
        <td><%= form.text_field :memo %></td></tr>
    <tr><th></th>
        <td><%= form.submit "送信" %></td><tr>
    
    <% end %>
</table>